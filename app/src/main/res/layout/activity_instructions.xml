<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_instructions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.guest.triv.ui.InstructionsActivity"
    android:background="@color/_colorAccent">

    <TextView
        android:text="Incorrect answers cost one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="53dp"
        android:id="@+id/textView4"
        android:textSize="25sp"
        android:textColor="@color/_primaryLight"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/coin"
        android:id="@+id/imageView"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:elevation="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:layout_alignTop="@+id/textView4"/>

    <TextView
        android:text="Five consecutive correct answers earns a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="91dp"
        android:id="@+id/textView7"
        android:textSize="25sp"
        android:textColor="@color/_primaryLight"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/coin"
        android:id="@+id/imageView3"
        android:elevation="0dp"
        android:paddingTop="30dp"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingLeft="65dp"
        android:layout_alignTop="@+id/textView7"/>

    <TextView
        android:text="Zero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:id="@+id/textView8"
        android:textSize="25sp"
        android:textColor="@color/_primaryLight"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/textView7"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/coin"
        android:id="@+id/imageView6"
        android:elevation="0dp"
        android:paddingLeft="55dp"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/textView8"
        android:paddingRight="250dp"/>

    <TextView
        android:text=" = Game Over"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:textSize="25sp"
        android:textColor="@color/_primaryLight"
        android:layout_alignTop="@+id/imageView6"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
