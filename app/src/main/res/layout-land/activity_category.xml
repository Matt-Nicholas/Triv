<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/_colorAccent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/choose_category"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="@color/_primaryLight"
        android:typeface="monospace"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/category_sports"
        android:id="@+id/sportsButton"
        android:layout_gravity="center_horizontal"
        android:background="@color/_icons"
        android:textColor="@color/_primaryText"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/category_entertainment"
        android:id="@+id/entertainmentButton"
        android:layout_gravity="center_horizontal"
        android:background="@color/_icons"
        android:textColor="@color/_primaryText"
        android:layout_alignTop="@+id/geographyButton"
        android:layout_alignLeft="@+id/politicsButton"
        android:layout_alignStart="@+id/politicsButton"
        android:layout_marginRight="10dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/category_history"
        android:id="@+id/historyButton"
        android:layout_gravity="center_horizontal"
        android:background="@color/_icons"
        android:textColor="@color/_primaryText"
        android:layout_below="@+id/animalsButton"
        android:layout_alignLeft="@+id/sportsButton"
        android:layout_alignStart="@+id/sportsButton"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/category_politics"
        android:id="@+id/politicsButton"
        android:layout_gravity="center_horizontal"
        android:background="@color/_icons"
        android:textColor="@color/_primaryText"
        android:layout_below="@+id/animalsButton"
        android:layout_alignLeft="@+id/animalsButton"
        android:layout_alignStart="@+id/animalsButton"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/category_animals"
        android:id="@+id/animalsButton"
        android:layout_gravity="center_horizontal"
        android:background="@color/_icons"
        android:textColor="@color/_primaryText"
        android:layout_alignTop="@+id/sportsButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/category_geography"
        android:id="@+id/geographyButton"
        android:layout_gravity="center_horizontal"
        android:background="@color/_icons"
        android:textColor="@color/_primaryText"
        android:layout_below="@+id/historyButton"
        android:layout_alignLeft="@+id/historyButton"
        android:layout_alignStart="@+id/historyButton"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/category_random"
        android:id="@+id/randomButton"
        android:background="@color/_icons"
        android:textColor="@color/_primaryText"
        android:layout_below="@+id/entertainmentButton"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:layout_marginTop="20dp" />

</RelativeLayout>